{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "lib": [
      "ES2019"
    ],
    "noImplicitAny": true,
    "outDir": "out",
    "sourceMap": true,
    // "rootDir": "src", // we do not use src as rootDir here because we have shared data in the "shared" project (e.g., Protocol.js)
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@Shared/*": [
        "../shared/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}